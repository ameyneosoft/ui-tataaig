<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/nav_icon"
    android:layout_marginVertical="30dp"
    android:layout_marginHorizontal="20dp"
    app:shapeAppearanceOverlay="@style/circle_profile"
    android:src="@drawable/img_default_avatar"
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/nav_name"
        android:textSize="20sp"
        android:layout_marginHorizontal="10dp"
        android:text="Baseer Singh"
        android:textFontWeight="500"
        android:textColor="@color/primaryColor"
        app:layout_constraintTop_toTopOf="@id/nav_icon"
        app:layout_constraintStart_toEndOf="@id/nav_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/view_profile"
        android:layout_marginHorizontal="10dp"
        android:text="View Profile"
        android:textColor="@color/button_color"
        app:layout_constraintTop_toBottomOf="@id/nav_name"
        app:layout_constraintStart_toEndOf="@id/nav_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/nav_close"
        android:backgroundTint="@color/backgroundColor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_cross"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>