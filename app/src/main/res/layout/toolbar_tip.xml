<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/tooptip_frame_layout"
    android:background="@android:color/transparent"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:paddingHorizontal="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:clipChildren="false"
>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="10dp"
    android:background="@drawable/tool_tip_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:paddingTop="10dp"
        android:paddingHorizontal="10dp"
        android:id="@+id/club_code"
        android:fontFamily="@font/poppins_semibold"
        android:text="Club Code : 04863435091090"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:paddingBottom="10dp"
        android:paddingHorizontal="10dp"
        android:text="Baseer Singh : 0049908341, \n434535235"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/club_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
